// Write a program to print the pattern

import java.util.*;
public class Pattern {
public static void main(String [] args) {
	System.out.println("Hariom Dhakar");
	System.out.println("Enter the no.:");
	Scanner sc = new Scanner(System.in);
	int n =sc.nextInt();
	for(int i=0;i<n;i++) {
		for(int j=0;j<=i;j++) {
			System.out.print("*");
		}
		System.out.print("\n");
	}
}
}
